<?xml version="1.0"?>
<launch>
  <arg name="world_name" />
  <arg name="kinesis_video_stream_name" />
  <arg name="kinesis_video_stream_region" default="us-east-1" />
  <arg name="gui" default="true" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find deeprotor_simulation_environment)/worlds/$(arg world_name).world"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <group ns="drone">
    <include file="$(find rotors_gazebo)/launch/spawn_mav.launch">
      <arg name="namespace" default="drone"/>
      <arg name="mav_name" value="hummingbird" />
      <arg name="model" value="$(find deeprotor_simulation_environment)/urdf/drone.xacro" />
    </include>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  </group>

  <!-- ros_control drone launch file -->
  <include file="$(find deeprotor_simulation_environment)/launch/drone_control.launch" ns="/"/>

  <!-- Publish "better odom" topic that is normally generated by the particle filter -->
  <node name="better_odom" pkg="topic_tools" type="relay"
          args="/vesc/odom /pf/pose/odom" />

  <include file="$(find deeprotor_simulation_environment)/launch/h264_video_encoder.launch">
    <arg name="config_file" value="$(find deeprotor_simulation_environment)/config/deeprotor_rpi_h264_encoder_config.yaml" />
    <arg name="image_transport" value="raw" />
  </include>

  <include file="$(find deeprotor_simulation_environment)/launch/kinesis_video_streamer.launch">
    <arg name="node_config_file" value="$(find deeprotor_simulation_environment)/config/deeprotor_node_config.yaml" />
    <arg name="stream_config_file" value="$(find deeprotor_simulation_environment)/config/deeprotor_stream_config.yaml" />
    <arg name="kinesis_video_stream_name" value="$(arg kinesis_video_stream_name)" />
    <arg name="kinesis_video_stream_region" value="$(arg kinesis_video_stream_region)" />
  </include>

</launch>
